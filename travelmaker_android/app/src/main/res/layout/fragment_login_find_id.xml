<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_login_findId"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@color/hint_color"
        app:boxStrokeColor="@drawable/selector_input_layout_color"
        app:hintTextAppearance="@style/TextLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_login_findId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력해주세요."
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_login_findId_phone"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@color/hint_color"
        app:boxStrokeColor="@drawable/selector_input_layout_color"
        app:helperText="- 없이 전화번호를 입력하세요."
        app:helperTextEnabled="true"
        app:hintTextAppearance="@style/TextLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_login_findId">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_login_findId_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signup_hint_phone_number"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login_findId_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_button_certification_ripple"
        android:text="인증요청"
        android:textColor="@color/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@id/til_login_findId_phone"
        app:layout_constraintTop_toTopOf="@id/til_login_findId_phone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_phone_certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/til_login_findId_phone"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_login_findId_certification"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColorHint="@color/hint_color"
            app:boxStrokeColor="@drawable/selector_input_layout_color"
            app:helperTextEnabled="true"
            app:hintTextAppearance="@style/TextLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_login_findId_certification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="인증 번호"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_login_findId_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_button_certification_ripple"
            android:text="인증하기"
            android:textColor="@color/button_text_color"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@id/til_login_findId_certification"
            app:layout_constraintTop_toTopOf="@id/til_login_findId_certification" />

        <TextView
            android:id="@+id/tv_login_findId_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:text="3:00"
            android:textColor="@color/timer_red"
            app:layout_constraintEnd_toEndOf="@id/til_login_findId_certification"
            app:layout_constraintTop_toBottomOf="@id/btn_login_findId_certification" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/btn_login_findId_id"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button_certification_ripple"
        android:text="아이디 확인하기"
        android:textColor="@color/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>